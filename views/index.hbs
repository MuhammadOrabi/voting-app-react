{{> nav}}

<div class="container">
	{{#if msg}}
	<div class="alert {{msg.type}} alert-dismissible fade show" role="alert">
		<button type="button" class="close" data-dismiss="alert" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
		<strong>{{msg.msg.name}}</strong> {{msg.msg.message}}.
	</div>
	{{/if}}
</div>
